<%@ Master Language="VB" AutoEventWireup="true" CodeBehind="Site.master.vb" Inherits="LoginRoles.SiteMaster" %>

<!DOCTYPE html>

<html lang="es">
<head runat="server">

    <style>
        body {
            background: linear-gradient(135deg, #80d0c7 0%, #13547a 100%) !important;
            min-height: 100vh !important;
        }

        .center-page {
            min-height: 80vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            border-radius: 1.2rem !important;
            background: rgba(255,255,255,0.96) !important;
            box-shadow: 0 6px 30px 0 rgba(31,38,135,0.19) !important;
            transition: box-shadow 0.2s;
        }

            .card:hover {
                box-shadow: 0 10px 40px 0 rgba(31,38,135,0.27) !important;
            }

        .form-floating {
            margin-bottom: 1rem;
        }

        .form-control:focus {
            border-color: #80d0c7;
            box-shadow: 0 0 0 2px #80d0c777;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .btn-primary {
            background: linear-gradient(90deg, #13547a 0%, #80d0c7 100%) !important;
            border: none !important;
            border-radius: 0.7rem !important;
            font-weight: 600;
            font-size: 1.1rem;
            letter-spacing: 1px;
            margin-top: 0.6rem;
            box-shadow: 0 3px 15px 0 #13547a22;
            transition: background 0.2s, box-shadow 0.2s;
        }

            .btn-primary:hover {
                background: linear-gradient(90deg, #80d0c7 0%, #13547a 100%) !important;
                box-shadow: 0 6px 24px 0 #13547a44;
            }

        .error {
            color: #c91d23;
            font-size: 0.98rem;
            margin-top: 0.6rem;
            display: block;
            text-align: center;
        }

        a {
            display: block;
            text-align: center;
            margin: 1.3rem auto 0 auto;
            color: #13547a;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }

            a:hover {
                color: #0b223d;
                text-decoration: underline;
            }

        .center-page {
            min-height: 80vh;
            display: flex !important;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
        }
    </style>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%: Page.Title %> MI PRIMER INICIO DE SESION WEB </title>

    <asp:PlaceHolder runat="server">
        <%: Scripts.Render("~/bundles/modernizr") %>
    </asp:PlaceHolder>

    <webopt:BundleReference runat="server" Path="~/Content/css" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
    <form runat="server">
        <asp:ScriptManager runat="server">
            <Scripts>
                <%--To learn more about bundling scripts in ScriptManager see https://go.microsoft.com/fwlink/?LinkID=301884 --%>
                <%--Framework Scripts--%>
                <asp:ScriptReference Name="MsAjaxBundle" />
                <asp:ScriptReference Name="jquery" />
                <asp:ScriptReference Name="WebForms.js" Assembly="System.Web" Path="~/Scripts/WebForms/WebForms.js" />
                <asp:ScriptReference Name="WebUIValidation.js" Assembly="System.Web" Path="~/Scripts/WebForms/WebUIValidation.js" />
                <asp:ScriptReference Name="MenuStandards.js" Assembly="System.Web" Path="~/Scripts/WebForms/MenuStandards.js" />
                <asp:ScriptReference Name="GridView.js" Assembly="System.Web" Path="~/Scripts/WebForms/GridView.js" />
                <asp:ScriptReference Name="DetailsView.js" Assembly="System.Web" Path="~/Scripts/WebForms/DetailsView.js" />
                <asp:ScriptReference Name="TreeView.js" Assembly="System.Web" Path="~/Scripts/WebForms/TreeView.js" />
                <asp:ScriptReference Name="WebParts.js" Assembly="System.Web" Path="~/Scripts/WebForms/WebParts.js" />
                <asp:ScriptReference Name="Focus.js" Assembly="System.Web" Path="~/Scripts/WebForms/Focus.js" />
                <asp:ScriptReference Name="WebFormsBundle" />
                <%--Site Scripts--%>
            </Scripts>
        </asp:ScriptManager>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" runat="server" href="~/">MI PRIMER INICIO DE SESION</a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <% if (autenticado = False) Then %>
                        <li class="nav-item"><a class="nav-link" runat="server" href="~/Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" runat="server" href="~/Registro">Registro</a></li>
                        <% End If %>

                        <li class="nav-item" runat="server" id="liAdmin"><a class="nav-link" runat="server" href="~/Admin">Administrador</a></li>

                        <% if (autenticado = True) Then %>
                        <li class="nav-item"><a class="nav-link" runat="server" href="~/Home">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" runat="server" href="~/Pacientes.aspx">Pacientes</a></li>
                        <li class="nav-item"><a class="nav-link" runat="server" href="~/Doctores.aspx">Doctores</a></li>
                        <li class="nav-item"><a class="nav-link" runat="server" href="~/Citas.aspx">Citas</a></li>
                        <% End If %>
                    </ul>

                    <% If (autenticado = True) Then %>
                    <div class="ms-auto">
                        <asp:Button ID="logout" runat="server" Text="Cerrar Sesión"
                            OnClick="logout_Click" CssClass="btn btn-danger btn-sm" />
                    </div>
                    <% End If %>
                </div>
            </div>
        </nav>
        <div class="container body-content">
            <asp:ContentPlaceHolder ID="MainContent" runat="server">
            </asp:ContentPlaceHolder>
            <hr />
            <footer>
                <p>&copy; <%: DateTime.Now.Year %> - Mi aplicación ASP.NET</p>
            </footer>
        </div>
    </form>
    <asp:PlaceHolder runat="server">
        <%: Scripts.Render("~/Scripts/bootstrap.js") %>
    </asp:PlaceHolder>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
